<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/StandardCard"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/events_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="200dp"
            android:minHeight="50dp"
            android:scaleType="centerCrop"
            tools:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/material_default_padding">

            <TextView
                android:id="@+id/events_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/info_title"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:typeface="sans"
                tools:text="Title" />

            <TextView
                android:id="@+id/events_src_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/material_default_padding"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="16sp"
                tools:text="date" />

            <TextView
                android:id="@+id/events_src_locality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/material_default_padding"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="16sp"
                tools:text="locality" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>