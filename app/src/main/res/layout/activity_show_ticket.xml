<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- The main content view -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- The toolbar aka SupportActionBar -->
        <include layout="@layout/toolbar" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <include
                layout="@layout/layout_all_errors"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="12dp"
                android:transitionName="@string/transition_card"
                tools:ignore="UnusedAttribute">

                <TextView
                    android:id="@+id/ticket_event_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/eventdetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text=""
                    android:textSize="@dimen/large_text_size" />

                <TextView
                    android:id="@+id/ticket_event_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text=""
                    android:textSize="@dimen/large_text_size"
                    android:textStyle="italic"/>

                <TextView
                    style="@style/SmallListSeparatorTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/ticket_qrcode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/qrcodedemo" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!-- The navigation drawer -->
    <include layout="@layout/navigation_drawer" />
</android.support.v4.widget.DrawerLayout>