<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                        android:id="@+id/drawer_layout"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:fillViewport="false">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <!-- The main content view -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- The toolbar aka SupportActionBar -->
            <include layout="@layout/toolbar"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/enter_card_info_description"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="30dp"/>

                <TextView
                    style="@style/SmallListSeparatorTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cardholer"
                    android:textSize="20sp"
                    android:layout_margin="15dp"
                    android:layout_marginTop="30dp"/>

                <EditText
                    android:id="@+id/cardholder_edit_text"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textSize="20sp"
                    android:singleLine="true"
                    android:inputType="textPersonName"
                    android:layout_marginHorizontal="40dp"/>

                <TextView
                    android:id="@+id/payment_info_price_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="15dp"/>

                <Button
                    android:id="@+id/saved_cards_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="20dp"
                    android:background="#00000000"
                    android:textColor="@color/tum_200"
                    android:textSize="20sp"
                    android:textAllCaps="false"
                    android:text="@string/saved_cards"/>

                <TextView
                    style="@style/SmallListSeparatorTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"/>

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/complete_purchase_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:layout_gravity="center"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="20dp"
                        android:layout_centerInParent="true"
                        android:textSize="20sp"
                        android:textAllCaps="false"
                        android:text="@string/complete_purchase" />

                    <ProgressBar
                        android:id="@+id/stripe_purchase_progress"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_toRightOf="@+id/complete_purchase_button"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"/>

                </RelativeLayout>



            </LinearLayout>

        </LinearLayout>

    </ScrollView>
    <!-- The navigation drawer -->
    <include layout="@layout/navigation_drawer"/>
</android.support.v4.widget.DrawerLayout>