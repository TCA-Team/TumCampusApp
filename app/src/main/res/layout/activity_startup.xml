<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/startupTumLogo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/material_default_padding"
        android:src="@drawable/tum_logo"
        android:tint="@color/tum_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/startupTumMotto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/startupTumLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/material_default_padding"
        android:text="@string/startup_motto"
        android:textColor="@color/color_primary"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/startupTumLogo" />

    <ProgressBar
        android:id="@+id/startupLoadingProgressBar"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="80dp"
        android:layout_height="6dp"
        android:layout_marginTop="@dimen/material_large_padding"
        android:indeterminate="true"
        android:indeterminateTint="@color/text_dark_gray"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/startupTumMotto"
        tools:visibility="visible" />

</android.support.constraint.ConstraintLayout>
