<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/StandardCard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/material_default_padding">

        <TextView
            style="@style/CardTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/card_login_title" />

        <TextView
            style="@style/CardBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/material_small_padding"
            android:layout_marginBottom="@dimen/material_small_padding"
            android:text="@string/card_login_body" />

        <android.support.design.button.MaterialButton
            android:id="@+id/login_button"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tumonline_login"
            android:textAllCaps="false"
            android:textColor="@color/color_primary"
            app:cornerRadius="@dimen/material_button_corner_radius" />

    </LinearLayout>

</android.support.design.card.MaterialCardView>