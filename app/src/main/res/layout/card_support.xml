<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/StandardCard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/material_default_padding">

        <TextView
            style="@style/CardTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/support_us_title" />

        <TextView
            style="@style/CardBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/material_default_padding"
            android:text="@string/support_us" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/facebook_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_thumb_up_white_24dp"
            android:drawablePadding="@dimen/material_small_padding"
            android:text="@string/like_us_on_facebook"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/facebook" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/github_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_code_white_24dp"
            android:drawablePadding="@dimen/material_small_padding"
            android:text="@string/check_us_out_on_github"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/github" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/email_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_email_white_24dp"
            android:drawablePadding="@dimen/material_small_padding"
            android:text="@string/e_mail_us"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/email" />

    </LinearLayout>

</android.support.v7.widget.CardView>